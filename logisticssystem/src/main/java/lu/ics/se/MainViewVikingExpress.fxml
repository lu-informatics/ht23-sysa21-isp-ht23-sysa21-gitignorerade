    <!-- Vehicle Management Tab -->
    <Tab text="Vehicle Management">
        <content>
            <AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lu.ics.se.controllers.VehicleController5">
