                        fx:controller="lu.ics.se.controllers.VehicleController5">
                <!-- Contents of the Workshop Management tab -->
                <VBox layoutX="20.0" layoutY="20.0" spacing="10.0">
                    <HBox spacing="10.0">
                        <TextField fx:id="nameField" promptText="Workshop Name:"/>
